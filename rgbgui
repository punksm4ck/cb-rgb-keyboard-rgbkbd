#!/usr/bin/env python3
import tkinter as tk
from PIL import Image, ImageTk
import time
import subprocess

def show_splash():
    splash = tk.Tk()
    splash.overrideredirect(True)
    splash.geometry("600x400+400+200")
    img = Image.open("splash_image.jpg")
    splash_img = ImageTk.PhotoImage(img)
    label = tk.Label(splash, image=splash_img)
    label.pack()
    splash.after(3000, splash.destroy)
    splash.mainloop()

show_splash()

# Replace with actual GUI launch command
subprocess.run(["python3", "main_gui.py"])
